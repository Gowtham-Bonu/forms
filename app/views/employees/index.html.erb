<div><%= render "search" %></div>
<div class="later" ><%= link_to "create a new employee", new_employee_path %></div>
<table class="table table-dark table-striped">
  <tr>
    <th>employee</th>
    <th>email</th>
    <th>password</th>
    <th>gender</th>
    <th>hobbies</th>
    <th>address</th>
    <th>mobile_number</th>
    <th>birth_date</th>
    <th>document</th>
    <th colspan="2" >actions</th>
  </tr>
  <% @employees.each do |employee| %>
    <tr>
      <td><%= employee.employee_name %></td>
      <td><%= employee.email %></td>
      <td><%= employee.password %></td>
      <td><%= employee.gender %></td>
      <td>
        <ul>
          <% employee.hobbies.each do |id| %>
            <li><%= Hobby.find(id.to_i).name %></li>
          <% end %>
        </ul>
      </td>
      <td>
        <p>house name: <%= employee.addresses.first.house_name %></p>
        <p>street name: <%= employee.addresses.first.street_name %></p>
        <p>road name: <%= employee.addresses.first.road %></p>
      </td>
      <td><%= employee.mobile_number %></td>
      <td><%= employee.birth_date %></td>
      <td><%= image_tag(employee.document.url, alt: 'Image', class:"handle" ) if employee.document? %></td>
      <td><button class="btn btn-dark"><%= link_to "Edit", edit_employee_path(employee) %></button></td>
      <td><button class="btn btn-light"><%= link_to "Destroy", employee_path(employee), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></button></td>
    </tr>
  <% end %>
</table>